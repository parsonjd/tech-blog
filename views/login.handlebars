<div class="container">
<div class="row justify-content-center">
<div class="col-6 card">

  

  <form class="card-body login-form">
    <h2 class="card-header">LOGIN</h2>

    <div class="form-group">
      <label class="form-label">Username:</label>
      <input class="form-input" type="text" id="username-login" />
    </div>

    <div class="form-group">
      <label class="form-label">Password:</label>
      <input class="form-input" type="password" id="password-login" />
    </div>

    <div class="form-group">
      <button class="btn btn-info" type="submit">LOGIN</button>
    </div>

  </form>
  
</div>

<div class="col-6 card">  

  <form class="card-body signup-form">
    <h2 class="card-header">SIGN UP</h2>

    <div class="form-group">
      <label class="form-label">Username:</label>
      <input class="form-input" type="text" id="username-signup" />
    </div>

    <div class="form-group">
      <label class="form-label">Password:</label>
      <input class="form-input" type="password" id="password-signup" />
    </div>

    <div class="form-group">
      <button class="btn btn-info" type="submit">SIGN UP</button>
    </div>

  </form>      

</div>
</div>
</div>

<script src="/js/login.js"></script>