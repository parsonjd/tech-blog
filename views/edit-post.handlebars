
<h2 class="card-header">Edit / Delete Post</h2>
    <form class="card-body edit-post-form">
        <div class="form-row">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" id="title" type="text" value="{{post.title}}" class="form-input form-control"/>
        </div>

        <div class="form-row">
        <label class="form-label" for="content">Content</label>
        <input name="content" id="content" type="text" value="{{post.content}}" class="form-input form-control"/>
        </div>
        <button id="update" type="submit" class="btn-primary">Update Post</button>
        <button id="delete" type="submit" class="delete-post-btn btn-primary">Delete Post</button>
    </form>


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>